# Local environment variables for Docker Compose
# Copy this file to .env.local and fill in your actual values
# .env.local is git-ignored and will not be committed

# Dynamics 365 Configuration
DYNAMICS_URL=https://your-org.crm4.dynamics.com
DYNAMICS_TOKEN_URL=https://login.microsoftonline.com/your-tenant-id/oauth2/token
DYNAMICS_GRANT_TYPE=client_credentials
DYNAMICS_CLIENT_ID=your-client-id
DYNAMICS_CLIENT_SECRET=your-client-secret
DYNAMICS_RESOURCE=https://your-org.crm4.dynamics.com
DYNAMICS_MAX_RETRIES=3
DYNAMICS_RETRY_DELAY_MS=2000
